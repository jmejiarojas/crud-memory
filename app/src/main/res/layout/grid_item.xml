<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridItemProveedor"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgFotoProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dp"
        android:src="@drawable/logolibertecsmall"  />
    <TextView
        android:id="@+id/TVITEM_RazonSocialProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="TVITEM_RazonSocialProveedor" />
    <TextView
        android:id="@+id/TVITEM_RucProveedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="TVITEM_RucProveedor" />
    <TextView
        android:id="@+id/TVITEM_Direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="TVITEM_Direccion" />

</LinearLayout>
